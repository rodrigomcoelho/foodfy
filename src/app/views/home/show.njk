{% extends '_parts/layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="/css/home.css">
{% endblock head %}

{% import '_parts/card.njk' as card %}

{% block content %}

    {% call card.render('container', 'regular') %}

    <img class="image-detail" src="{{recipe.files[0].src}}" alt="{{recipe.title}}">

    <section class="details">
        <h1 class="detail-title">{{recipe.title}}</h1>
        <p class="detail-author">{{recipe.author.name}}</p>

        <div class="detail-item">
            <div class="detail-item-title">
                <h3>Ingredientes</h3>
                <span class="toggle-item" data="ingredients">Esconder</span>
            </div>

            <div id="ingredients">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}};</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="detail-item">
            <div class="detail-item-title">
                <h3>Modo de preparo</h3>
                <span class="toggle-item" data="howToPrepare">Esconder</span>
            </div>

            <div id="howToPrepare">
                <ul>
                    {% for step in recipe.preparation %}
                        <li>{{step}};</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="detail-item">
            <div class="detail-item-title">
                <h3>Informações adicionais</h3>
                <span class="toggle-item" data="additionalInfo">Esconder</span>
            </div>

            <div id="additionalInfo">
                {{recipe.information}}
            </div>
        </div>
    </section>

    {% endcall %}

{% endblock content %}
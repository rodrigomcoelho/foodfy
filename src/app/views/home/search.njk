{% extends '_parts/layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="/css/home.css">
{% endblock head %}

{% import '_parts/card.njk' as card %}

{% block content %}

  {% call card.render('container', 'regular')%}

  <h2>Buscando por "{{search}}"</h2>

  <section class="home items">

    {% for recipe in recipes %}
      <div class="home item">
        <a href="/home/{{recipe.id}}"><img src="{{recipe.files[0].src}}" alt="{{recipe.title}}"></a>
        <p>{{recipe.title}}</p>
        <span>{{recipe.author.name}}</span>
      </div>
    {% endfor %}

  </section>

  {% endcall %}

{% endblock content %}
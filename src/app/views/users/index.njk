{% extends '_parts/layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="/css/users.css">
{% endblock head %}

{% import '_parts/card.njk' as card %}

{% block content %}

  {% call card.render('container', 'admin')%}
  <div class="view">
    <h3>Gerenciar Usuários</h3>
    <a href="/admin/users/create" class="button">Novo Usuário</a>
  </div>

  <div class="view list">
    {% for user in users %}

      <div class="item">

        <h4>{{user.name}}</h4>
        <span>{{user.email}}</span>
        <a href="/admin/users/{{user.id}}">Editar</a>
        <form action="admin/users?_method=DELETE" method="post">
          <input type="submit" value="Deletar">
          <input type="hidden" name="id" value="{{user.id}}">
        </form>

      </div>

    {% endfor %}

  </div>

  {% endcall %}

{% endblock content %}
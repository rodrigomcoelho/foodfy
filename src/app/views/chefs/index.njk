{% extends '_parts/layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="/css/chefs.css">
{% endblock head %}

{% import '_parts/card.njk' as card %}

{% block content %}


  {% call card.render('container', 'admin', session)%}
  <div class="view">
    <h3>Gerenciar Chefs</h3>
    {% if session.isAdmin %}
      <a href="/admin/chefs/create" class="button">Novo Chef</a>
    {% endif %}
  </div>

  <div class="view list">
    {% for chef in chefs %}

      <div class="item">
        <img {% if chef.avatar.src | length > 0 %} src="{{chef.avatar.src}}" alt="{{chef.name}}" {% endif %}>
        <h4>{{chef.name}}</h4>
        <span>{{chef.recipes.length}} receitas</span>
        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>

      </div>

    {% endfor %}

  </div>

  {% endcall %}

{% endblock content %}
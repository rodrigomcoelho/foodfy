{% extends '_parts/layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="/css/recipe.css">
{% endblock head %}

{% import '_parts/card.njk' as card %}

{% block content %}

    {% call card.render('container', 'admin') %}

    <div class="view">
        <h3>Gerenciar Receitas</h3>
        <a href="/admin/recipes/create" class="button">Nova Receita</a>
    </div>

    <div class="view list">
        {% for recipe in recipes %}

            <div class="item">
                <img src="{{recipe.files[0].src}}" alt="{{recipe.title}}">
                <h4>{{recipe.title}}</h4>
                <span>Por
                    {{recipe.author.name}}</span>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>

        {% endfor %}

    </div>

    {% endcall %}

{% endblock content %}